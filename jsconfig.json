{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "#adapters/*": ["./src/adapters/*"],
      "#application/*": ["./src/application/*"],
      "#common/*": ["./src/common/*"],
      "#data/*": ["./src/data/*"],
      "#domain/*": ["./src/domain/*"],
      "#feature-flags/*": ["./src/feature-flags/*"],
      "#formsubmission/*": ["./src/forms-submission-data/*"],
      "#plugins/*": ["./src/plugins/*"],
      "#repositories/*": ["./src/repositories/*"],
      "#routes/*": ["./src/routes/*"],
      "#server/*": ["./src/server/*"],
      "#test/*": ["./src/test/*"],
      "#vite/*": ["./.vite/*"],
      "#workers/*": ["./src/workers/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "coverage", ".vite"]
}
