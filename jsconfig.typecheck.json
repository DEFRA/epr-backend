{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "ES2022",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "paths": {
      "#adapters/*": ["./src/adapters/*"],
      "#application/*": ["./src/application/*"],
      "#common/*": ["./src/common/*"],
      "#data/*": ["./src/data/*"],
      "#domain/*": ["./src/domain/*"],
      "#feature-flags/*": ["./src/feature-flags/*"],
      "#formsubmission/*": ["./src/forms-submission-data/*"],
      "#plugins/*": ["./src/plugins/*"],
      "#repositories/*": ["./src/repositories/*"],
      "#root/*": ["./src/*"],
      "#routes/*": ["./src/routes/*"],
      "#server/*": ["./src/server/*"],
      "#workers/*": ["./src/workers/*"]
    }
  },
  "include": ["src/**/*.js"],
  "exclude": [
    "node_modules",
    ".vite",
    "**/*.test.js",
    "**/*.contract.js",
    "**/*-test-helpers.js",
    "**/test-helpers/**",
    "**/test-fixtures.js"
  ]
}
