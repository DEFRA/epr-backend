{
  "name": "epr-backend",
  "version": "0.0.0",
  "description": "epr-backend",
  "main": "src/index.js",
  "type": "module",
  "imports": {
    "#adapters/*": "./src/adapters/*",
    "#application/*": "./src/application/*",
    "#common/*": "./src/common/*",
    "#domain/*": "./src/domain/*",
    "#repositories/*": "./src/repositories/*",
    "#workers/*": "./src/workers/*",
    "#routes/*": "./src/routes/*",
    "#plugins/*": "./src/plugins/*",
    "#data/*": "./src/data/*",
    "#server/*": "./src/server/*",
    "#feature-flags/*": "./src/feature-flags/*",
    "#test/*": "./src/test/*"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "adr:generate:toc": "adr generate toc > docs/architecture/decisions/index.md",
    "docker:dev": "NODE_ENV=development npm run server:watch",
    "dev": "NODE_ENV=development npm run server:watch",
    "dev:debug": "NODE_ENV=development npm run server:debug",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "git:pre-commit-hook": "npm run format:check && npm run lint",
    "postinstall": "npm run setup:husky",
    "lint": "eslint --cache --cache-strategy content \"**/*.js\"",
    "lint:fix": "npm run lint -- --fix",
    "postversion": "git add package.json package-lock.json && git commit -m $npm_package_version",
    "test": "TZ=UTC vitest run --coverage",
    "test:watch": "TZ=UTC vitest --coverage",
    "server:watch": "nodemon --inspect=0.0.0.0 --ext js,json --legacy-watch ./src",
    "server:debug": "nodemon --inspect-brk=0.0.0.0 --ext js,json --legacy-watch ./src",
    "start": "NODE_ENV=production node --use-strict .",
    "setup:husky": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module"
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@aws-sdk/client-s3": "3.916.0",
    "@defra/cdp-auditing": "0.4.0",
    "@defra/hapi-secure-context": "0.3.0",
    "@defra/hapi-tracing": "1.28.0",
    "@elastic/ecs-pino-format": "1.5.0",
    "@hapi/boom": "10.0.1",
    "@hapi/hapi": "21.4.3",
    "@hapi/jwt": "3.2.1",
    "@hapi/wreck": "18.1.0",
    "aws-embedded-metrics": "4.2.0",
    "aws4": "1.13.2",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "deepmerge": "4.3.1",
    "exceljs": "4.4.0",
    "global-agent": "3.0.0",
    "hapi-pino": "13.0.0",
    "hapi-pulse": "3.0.1",
    "http-status-codes": "2.3.0",
    "https-proxy-agent": "7.0.6",
    "joi": "17.13.3",
    "mongo-locks": "3.0.2",
    "mongodb": "6.20.0",
    "node-fetch": "3.3.2",
    "notifications-node-client": "8.2.1",
    "obfuscate-mail": "1.5.1",
    "pino": "10.1.0",
    "pino-pretty": "13.1.2",
    "piscina": "5.1.3",
    "undici": "7.16.0"
  },
  "overrides": {
    "brace-expansion": "2.0.2",
    "glob": "11.0.3"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "3.2.4",
    "autoprefixer": "10.4.21",
    "eslint": "9.37.0",
    "eslint-plugin-n": "17.23.1",
    "husky": "9.1.7",
    "lint-staged": "16.2.4",
    "neostandard": "0.12.2",
    "nodemon": "3.1.10",
    "npm-run-all": "4.1.5",
    "prettier": "3.6.2",
    "vitest": "3.2.4",
    "vitest-fetch-mock": "0.4.5",
    "vitest-mongodb": "1.0.2"
  }
}
